<%- include('includes/head.ejs')%>
    <%- include('includes/nav.ejs')%>
        <div class="container">
            <div class="row">

                <div class="col-lg-2">

                </div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Adicionar novo contato</h1>
                    <p class="text-center lead">Preencha as informações abaixo:</p>

                    <%- include('includes/messages.ejs')%>

                </div>

                <div class="row my-5">

                    <div class="col-lg">
                        <%if(contato._id){%>
                        <form action="/contato/edit/<%= contato.id %>" method="POST">
                            <%} else {%>
                                <form action="/contato/register" method="POST">
                                <% } %>
                            <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                            <div class="form-group mb-3">
                                <label  for="exampleInputEmail1" class="form-label">Nome</label>
                                <input value="<%= contato.nome %>" placeholder="digite seu nome aqui!" type="text" class="form-control" name="nome" aria-describedby="emailHelp">
                            </div>
                            <div class="form-group mb-3">
                                <label for="exampleInputEmail1" class="form-label">Sobrenome</label>
                                <input value="<%= contato.sobrenome %>" placeholder="digite seu sobrenome aqui!" type="text" class="form-control" name="sobrenome" aria-describedby="emailHelp">
                            </div>
                            <div class="form-group mb-3">
                                <label for="exampleInputEmail1" class="form-label">Numero</label>
                                <input value="<%= contato.numero %>" placeholder="(xx)x xxxx-xxxx" type="text" class="form-control" name="numero" aria-describedby="emailHelp">
                            </div>
                            <button type="submit" class="btn btn-primary">Adicionar</button>

                        </form>
                    </div>

                </div>
            </div>
            <%- include('includes/footer.ejs')%>